{
  "name": "@hyperbitjs/chains",
  "version": "1.7.0",
  "license": "MIT",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "start": "tsdx watch",
    "build": "tsdx build",
    "test": "vitest",
    "lint": "tsdx lint",
    "lint:fix": "tsdx lint --fix",
    "prepare": "tsdx build",
    "size": "size-limit",
    "analyze": "size-limit --why"
  },
  "husky": {
    "hooks": {
      "pre-commit": "tsdx lint"
    }
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/hyperbit-dev/chains.git"
  },
  "homepage": "https://github.com/hyperbit-dev/chains/blob/master/README.md",
  "author": "Hyperbit",
  "module": "dist/chains.esm.js",
  "size-limit": [
    {
      "path": "dist/chains.cjs.production.min.js",
      "limit": "10 KB"
    },
    {
      "path": "dist/chains.esm.js",
      "limit": "10 KB"
    }
  ],
  "devDependencies": {
    "@size-limit/preset-small-lib": "^8.1.0",
    "@types/jest": "^29.5.12",
    "@types/mocha": "^10.0.6",
    "husky": "^8.0.2",
    "size-limit": "^8.1.0",
    "tsdx": "^0.14.1",
    "tslib": "^2.4.1",
    "typescript": "^4.8.4",
    "vitest": "^1.3.1"
  },
  "publishConfig": {
    "access": "public"
  },
  "overrides": {
    "jsdom": "^16.5.0",
    "node-notifier": "^8.0.1"
  }
}
